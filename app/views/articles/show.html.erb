<h1>Show Article</h1>

<div class="card border-info mb-3">
  <div class="card-header">
    <%= @article.id %>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <%= @article.title %>
    </h5>
    <p class="card-text">
      <%= @article.description %>
    </p>
  </div>
  <div class="card-footer">
    <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-warning float-start me-2" %>
    <%= button_to "Destroy this article", @article, method: :delete, class: "btn btn-danger float-start me-2" %>
    <%= link_to "Back to articles", articles_path, class: "btn btn-secondary float-start me-2" %>
  </div>
</div>

